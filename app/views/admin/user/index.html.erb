<h1>ユーザ</h1>
<table>
	<tr>
		<th>id</th><th>ニックネーム/device_token</th><th>通知</th><th>登録日</th><th>最終更新日</th><th>編集</th><th>削除</th>
	</tr>
	<% @userList.each do |user| %>
		<tr>
			<td><%= user.id %></td>
			<td><%= user.name %><br /><%= user.device_token[0..30]  %>...</td>
			<td><a href="/admin/user/push/<%= user.id %>">通知</a></td>
			<td><%= user.created_at.strftime('%Y/%m/%d %H:%M:%S')  %></td>
			<td><%= user.updated_at.strftime('%Y/%m/%d %H:%M:%S')  %></td>
			<td><a href="/admin/user/edit/<%= user.id %>">編集</a></td>
			<td><a href="/admin/user/destroy/<%= user.id %>" onclick="return confirm('削除します');">削除</a></td>
		</tr>
	<% end %>
</table>
